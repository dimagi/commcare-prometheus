[
  {
    "targets": [
      {%- for item in groups.pg_citusdb_master -%}
      {% if not loop.last %}
      "{{ hostvars[item].alt_hostname | default(hostvars[item].hostname) }}:9187",
      {% else %}
      "{{ hostvars[item].alt_hostname }}:9187"
      {% endif %}
      {%- endfor -%} 
    ],
    "labels": {
      "job": "postgres_exporter",
      "service": "citusdb"
    }
  },

  {
    "targets": [
      {%- for item in groups.pg_citusdb_standby -%}
      {% if not loop.last %}
      "{{ hostvars[item].alt_hostname | default(hostvars[item].hostname) }}:9187",
      {% else %}
      "{{ hostvars[item].alt_hostname }}:9187"
      {% endif %}
      {%- endfor -%} 
    ],
    "labels": {
      "job": "postgres_exporter",
      "service": "pg_standby"
    }
  }
]

