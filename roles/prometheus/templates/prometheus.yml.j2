global:
  evaluation_interval: 15s
  scrape_interval: 20s
  scrape_timeout: 20s

  external_labels:
    environment: {{ monitoring_env }} 

rule_files:
  - /etc/prometheus/rules/*.rules

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    metrics_path: /prometheus/metrics
    static_configs:
      - targets: ['localhost:9090']
  - job_name: blackbox
    metrics_path: /probe
    params:
      module: [http_prometheus]
    static_configs:
      - targets:
{%- for url in prometheus_http_probe_urls %}        
         - {{ url }}
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ ansible_default_ipv4.address }}:9115
  - job_name: kafka_zookeeper_exporter
    static_configs:
      - targets: ["{{ groups.zookeeper.0 }}:9381"]
    metrics_path: /kafka
    scheme: http
    params:
      zookeeper: ["{{ groups.zookeeper.0 }}:2181"]
  - job_name: 'dummy' # it's mandatory
    file_sd_configs:
      - files:
        - /etc/prometheus/file_sd/*.json

    relabel_configs:
      - source_labels: ['__address__']
        separator:     ':'
        regex:         '(.*):.*'
        target_label:  'instance'
        replacement:   '${1}'
alerting:
  alertmanagers:
    - scheme: http
      path_prefix: /alertmanager
      static_configs:
        - targets:
{% if 'alertmanager' in group_names %}
{% for host in groups['alertmanager'] %}
            - '{{ host }}:9093'
{% endfor %}
{% else %}
            - localhost:9093
{% endif %}

